RewriteEngine On

# PARA PONER EN LA URL SOLO EL NOMBRE DEL FILE SIN EXTENSION PHP
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php

# PARA PONER EN LA URL SOLO EL NOMBRE DEL FILE SIN EXTENSION HTML
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html


# Si la ruta no es un archivo existente, ni una carpeta
# Reescribir al index
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+?)/?$ ../frontend/index.php?url=$1 [L,QSA]